<p id="notice"><%= notice %></p>

<p>
  <strong>Contenido:</strong>
  <%= @post.contenido %>
</p>

<p>
  <strong>Titulo:</strong>
  <%= @post.titulo %>
</p>

<p>
  <strong>Likes:</strong>
  <%= @post.likes %>
</p>

<h2>Comentarios</h2>

<% @post.comentarios.order("created_at DESC").each do |comentario| %>
  <p>----------------------</p>
  <p>
    <strong>Comentario:</strong>
    <%= comentario.comment %>
  </p>
 
  <p>
    <strong>Likes:</strong>
    <%= comentario.likes %>
  </p>
  <p>
    <strong>Fecha:</strong>
    <%= comentario.created_at %>
  </p>

<% end %>
 
