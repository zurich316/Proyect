<%= form_for([@post, @post.comentarios.build]) do |f| %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.submit 'Guardar Comentario' %>
  </p>
